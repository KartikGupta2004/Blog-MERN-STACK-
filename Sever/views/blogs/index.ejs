    <%- include('../partials/nav.ejs') %>
        <div class="blogs content">
            <h2>All Blogs</h2>
            <% if(blogs.length>0){%>
                <% blogs.forEach(blog=>{%>
                    <a href="/blogs/ <%= blog._id %>" class="single">
                    <h3 class="title"><%= blog.title %></h3>
                    <p class="snippet"><%= blog.snippet %></p>
                </a>
                    <% }) %>
                <% }else{ %>
                <p>No Blogs to display :( ..</p>
                <% } %>
        </div>
        <%- include('../partials/footer.ejs') %>
</body>
</html>